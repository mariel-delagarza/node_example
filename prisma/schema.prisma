// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "darwin", "debian-openssl-1.1.x"]
}

model Bug {
  id String @id @unique @default(uuid()) @db.Uuid
  name String @unique
  location String 
  value Int 
  time String 
  monthsNorth Month[]
  monthsSouth Month[]
}

enum Month {
  January
  February
  March
  April
  May
  June
  July
  August
  September
  October
  November
  December
}
